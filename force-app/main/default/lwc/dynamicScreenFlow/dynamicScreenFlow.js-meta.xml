<?xml version="1.0" encoding="UTF-8"?>
<LightningComponentBundle xmlns="http://soap.sforce.com/2006/04/metadata">
    <apiVersion>56.0</apiVersion>
    <isExposed>true</isExposed>

    <masterLabel>Dynamic Screen Flow</masterLabel>

	<description>Takes input and pulls up a screen flow.</description>
    
    <targets>
        <target>lightningCommunity__Page</target>
        <target>lightningCommunity__Default</target>
        <target>lightning__RecordPage</target>
        <target>lightning__AppPage</target>
        <target>lightning__FlowScreen</target>
    </targets>

	<targetConfigs>

        <targetConfig targets="lightningCommunity__Default, lightning__RecordPage, lightning__AppPage, lightning__FlowScreen">  

            <property 
				name="flowApiName" 
				type="String"
				label="Flow API Name"
				description="This is if you rather pass in the whole flow api name."/>

        </targetConfig>

    </targetConfigs>
</LightningComponentBundle>